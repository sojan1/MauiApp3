<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.EditItem"
             Title="EditItem">
    <StackLayout Padding="10">
        <Entry x:Name="txtItemId" Placeholder="ItemId" Text="{Binding ItemId}"  />
        <Entry x:Name="txtItemName" Placeholder="Item Name" Text="{Binding ItemName}" />
        <Entry x:Name="txtItemDescription" Placeholder="Description" Text="{Binding Description}" />
        <Button Text="Save" Command="{Binding SaveCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" />
    </StackLayout>
</ContentPage>